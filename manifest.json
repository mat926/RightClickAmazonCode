{
	"name": "AmazonGCRedeemer",
	"description": "Redeem an Amazon code from right-clicking",
	"version": "1.0",
	"manifest_version": 3,
	"background" : {
		"service_worker" : "background.js"
	},
	"content_scripts" : [{
		"js" : ["content.js"],
		"matches" : ["<all_urls>"],
		"run_at" : "document_start"
	}],
	"permissions": ["contextMenus", "tabs", "activeTab"]
}